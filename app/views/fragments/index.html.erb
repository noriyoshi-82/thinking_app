<header>
  <div class="top-page-header">
    <div class="title">
      <%= link_to "Thinking", "/", class:"top-title" %>
    </div>
    <ul class="navi">
    <% unless user_signed_in? %>
      <li><%= link_to "ログイン", "#", class:"login" %></li>
      <li><%= link_to "新規登録", new_user_registration_path, class:"sign-up" %></li>
    <% else %>
      <li><%= link_to current_user.nickname, "#", class: "user-nickname" %> </li>
      <li><%= link_to "ログアウト", destroy_user_session_path, class:"log-out" %>
    <% end %>
    </ul>
  </div>
</header>

<div class="main">
  <div class="said-bar">
    <div class="user-nickname">
      <%= current_user.nickname %>
    </div>
    <div class="new-btn">
      <%= link_to "新しい目標！！", "#", class:"new-content" %>
    </div>
  </div>
  <div class="item-contents">
    <ul class="think-list">
      <% @fragments.each do | fragment |%>
        <li class="list">
          <%= link_to "#{fragment.title}", "#", class:"f-title" %>
          <%= fragment.genre %>
          <%= fragment.user.nickname%>
        </li>
      <% end %>
    </ul>
  </div>  
</div>
