<%= render "shared/header" %>
<div class="main">
  <div class="tool-bar">
    <div class="new-btn">
      <%= link_to "新しい目標！！", new_fragment_path, class:"new-content" %>
    </div>
    <div class="nickname">
      <% if user_signed_in? %>
        <%= current_user.nickname %>
      <% end %>
    </div>
  </div>
  <div class="item-contents">
    <ul class="think-list">
    <% @fragments.each do | fragment |%>
        <li class="list">
          <div class="list-up">
            <div class="list-a">Name:<%= fragment.user.nickname%></div>
            <div class="list-a">Category:<%= fragment.genre.name %></div>
            <div class="list-a-btn"><%= link_to "check!!", fragment_path(fragment.id), class:"f-title"%></div>
          </div>
          <div class="list-down">
            Title:<%= fragment.title %>
          </div>
        </li>
      <% end %>
    </ul>
  </div> 
</div>
