<%= render "shared/header" %>

<div class="fragment-main">
  <%= form_with model: @fragment, url: fragments_path, class: "fragment-form", local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
    <div class="title-name">
      <%= f.text_field :title, class:"input-fragment", id:"title", placeholder:" 目標を掲げよう！", maxlength:"40" %>
      <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>
    </div>
    <div class="fragment-box">
      <div class="fragment-item">
        <ul>
          <%= f.text_field :heading_a, class:"input-fragment", id:"heading_a", placeholder:" 中間目標: (例) 毎日筋トレ", maxlength:"40" %>
          <li class="input-memo"><%= f.text_field :heading_a_a, class:"input-fragment", id:"heading_a_a", placeholder:" 例) 腹筋20回！", maxlength:"40" %></li>
          <li class="input-memo"><%= f.text_field :heading_a_b, class:"input-fragment", id:"heading_a_b", placeholder:" 例) 腕立て20回...etc", maxlength:"40" %></li>
        </ul>
      </div>
      <div class="fragment-item">
        <ul>
          <%= f.text_field :heading_b, class:"input-fragment", id:"heading_b", placeholder:" 中間目標", maxlength:"40" %>
          <li class="input-memo"><%= f.text_field :heading_b_a, class:"input-fragment", id:"heading_b_a", placeholder:" 今からすること", maxlength:"40" %></li>
          <li class="input-memo"><%= f.text_field :heading_b_b, class:"input-fragment", id:"heading_b_b", placeholder:" 今からすること", maxlength:"40" %></li>
        </ul>
      </div>
      <div class="fragment-item">
        <ul>
          <%= f.text_field :heading_c, class:"input-fragment", id:"heading_c", placeholder:" 中間目標 ", maxlength:"40" %>
          <li class="input-memo"><%= f.text_field :heading_c_a, class:"input-fragment", id:"heading_c_a", placeholder:" hoge ", maxlength:"40" %></li>
          <li class="input-memo"><%= f.text_field :heading_c_b, class:"input-fragment", id:"heading_c_b", placeholder:" hoge ", maxlength:"40" %></li>
        </ul>
      </div>
    </div>
    <div class="free-space">
       <%= f.text_area :free_memo, class:"input-free", id:"free_memo", placeholder:" 備考欄: 例)参考Youtube URL, 決意表明etc... ", maxlength:"200" %>
    </div>
    <div class="flagment-footer">
      <%= f.submit "これで決定!!", class:"fragment-btn" %>
    </div> 
  <% end %>
</div>