<%= render "shared/header" %>
<div class="log-in-contents">
  <div class="header-text">
    <h2>ログイン</h2>
  </div>
  <%= form_with model: @user, url: user_session_path, class:"sessions-main", local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
    <div class="form-group">
      <div class="form-field">
        <label class="form-text">・メールアドレス</label>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"こちらに記入してください", autofocus: true %>
    </div>
    <div class="form-group">
      <div class="form-field">
        <label class="form-text">・パスワード</label>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>
    <div class="form-group">
      <div class="form-field">
        <label class="form-text">・パスワード(確認)</label>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <div class="actions-log-in">
      <%= f.submit "ログイン", class:"actions-log-in-btn" %>
    </div> 
  <% end %>
</div>
<%= render "devise/shared/links" %>
