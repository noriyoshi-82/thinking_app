<%= render "shared/header" %>
<div class="sign-up-contents">
  <div class="header-text">
    <h2>登録情報入力</h2>
  </div>
  <%= form_with model: @user, url: user_registration_path, class: "registration-main", local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group">
        <div class="form-field">
          <label class="form-text">・ニックネーム</label>
          <span class="indispensable">(必須)</span>
        </div>  
        <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) hoge太郎", maxlength:"40" %>  
      </div>
      <div class="form-group">
        <div class="form-field">
          <label class="form-text">・メールアドレス</label>
          <span class="indispensable">(必須)</span>
        </div>
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:"こちらに記入してください", autofocus: true %>
      </div>
      <div class="form-group">
        <div class="form-field">
          <label class="form-text">・パスワード</label>
          <span class="indispensable">(必須)</span>
        </div>
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>
      <div class="form-group">
        <div class="form-field">
          <label class="form-text">・パスワード(確認)</label>
          <span class="indispensable">(必須)</span>
        </div>
          <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>

    <div class="actions">
      <%= f.submit "登録！！", class:"actions-btn" %>
    </div> 
    <div class="login-btn">
      <%= link_to "＊アカウントをお持ちの方はこちらから", user_session_path, class:"login-btn-text" %>
    </div>
  <% end %>
</div>
  
